<h1 class="bg-info text-white">Confirm Email</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input name="email" class="form-control" value="@ViewBag.UserEmail"/>
    </div>
    <button class="btn btn-primary" type="submit">Send</button>
</form>
